# docker/backend-api/Dockerfile.prod

FROM node:20-bookworm-slim

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install --omit=dev

# Copy source code
COPY . .

# Set environment variables
ENV NODE_ENV=production
ENV PORT=8080

# Expose port
EXPOSE 8080

# Start the backend
CMD ["node", "src/index.js"]
